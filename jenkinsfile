pipeline {
    agent {
        docker{
            image "papitoio/node-wd"
            args "--network=skynet"
        }
    }
    stages{
        stages('Build') {
            steps{
                sh "npm install"
            }
        }
        stage('Tests'){
            steps{
                sh "npm run test:ci"
            }
            
        }
    }
}